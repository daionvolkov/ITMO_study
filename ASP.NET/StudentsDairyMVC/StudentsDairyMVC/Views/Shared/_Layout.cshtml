<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <header class="d-flex justify-content-center py-3">
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="/Home/Index" class="nav-link active" aria-current="page">Главная</a></li>
                <li class="nav-item"><a href="/Home/Add" class="nav-link">Добавить запись</a></li>
                <li class="nav-item"><a href="/Home/FiveBest" class="nav-link">Пять лучших</a></li>
                <li class="nav-item"><a href="/Home/FiveWorst" class="nav-link">Пять Худших</a></li>

            </ul>
        </header>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script>
    $(".btn-common-ball").click(function () {
        $(".common-ball").toggleClass("active");
    });

    </script>
</body>
</html>
