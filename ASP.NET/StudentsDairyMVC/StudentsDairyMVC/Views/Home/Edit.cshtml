@model StudentsDairyMVC.Models.Student

@{
    Layout = Layout;
}
<h3>Редактировать @Model.FirstName</h3>

<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="mb-3">
                <fieldset>
                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(m => m.Id)

                    <p> 
                        @Html.LabelFor(m => m.FirstName, "Имя")
                        <br />
                        @Html.EditorFor(m => m.FirstName)
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </p>


                    <p>
                        @Html.LabelFor(m => m.LastName, "Фамилия")
                        <br />
                        @Html.EditorFor(m => m.LastName)
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </p>
                    <p>
                        @Html.LabelFor(m => m.ScoreId, "Оценка")
                        <br />
                        @Html.EditorFor(m => m.ScoreId)
                        @Html.ValidationMessageFor(model => model.ScoreId, "", new { @class = "text-danger" })
                    </p>

                    <p><input class="btn btn-primary" type="submit" value="Редактировать" /></p>
                </fieldset>
            </div>
        </div>

    }
</div>
